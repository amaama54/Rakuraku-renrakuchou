<main>
  <div class="container">
    
    <div class="row mt-3">
      <div class="col-sm"></div>
      <div class="col-sm text-center"><h2>申請一覧</h2></div>
      <div class="col-sm"></div>
    </div>
    
    <div class="row mt-3">
      <div class="col-sm"></div>
      <div class="col-sm">
        <table class="table table-hover table-inverse">
          <% @requests.each do |request| %>
            <tr>
              <td>名前</td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <th><%= request.parent.name %></th>
              <th><%= link_to "申請承認", teacher_teacher_allow_path(teacher_id:current_teacher.id, id:request.id), method: :post %></th>
              <th><%= link_to "申請拒否", teacher_teacher_follow_request_path(teacher_id:current_teacher.id, id:request.id), method: :delete %></th>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="col-sm"></div>
    </div>
    
  </div>
</main>