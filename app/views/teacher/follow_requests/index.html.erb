<main>
  <div class="container">
    
    <div class="row mt-3">
      <div class="col-sm col-md-3"></div>
      <div class="col-sm col-md-6 text-center"><h2>申請一覧</h2></div>
      <div class="col-sm col-md-3"></div>
    </div>
    
    <div class="row mt-3">
      <div class="col-sm col-md-3"></div>
      <div class="col-s  col-md-6">
        <p class="text-center"><%= flash[:notice] %></p>
        <table class="table table-hover table-inverse">
          <% @requests.each do |request| %>
            <tr>
              <th>名前</th>
              <th></th>
              <th></th>
            </tr>
            <tr>
              <td><%= request.parent.name %></td>
              <td><%= link_to "申請承認", teacher_teacher_allow_path(teacher_id:current_teacher.id, id:request.id), method: :post %></td>
              <td><%= link_to "申請拒否", teacher_teacher_follow_request_path(teacher_id:current_teacher.id, id:request.id), method: :delete %></td>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="col-sm col-md-3"></div>
    </div>
    
    <div class="row">
      <div class="col-sm col-md-3"></div>
      <div class="col-sm col-md-6"><%= paginate @requests %></div>
      <div class="col-sm col-md-3"></div>
    </div>
    
  </div>
</main>