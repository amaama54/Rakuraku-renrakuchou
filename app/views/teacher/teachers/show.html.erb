<main>
  <div class="container">
    <div class="row">
      <div class="col  mt-5">
        <h2>新規連絡</h2>
        <%= form_with model: @connection, url: "/teacher/teachers", local:true do |f| %>
          <h4>タイトル</h4>
          <%= f.text_field :title %>
          <h4>本文</h4>
          <%= f.text_area :body %>
          <%= f.submit "投稿" %>
        <% end %>
      </div>
      
      <div class="col-md-8 offset-md-1 mt-5">
        <h2>連絡事項</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>日付</th>
              <th>タイトル</th>
            </tr>
          </thead>
          <tbody>
            <% @connections.each do |connection| %>
            <tr>
                <td><%= connection.created_at %></td>
                <td><%=link_to connection.title, teacher_connection_path(connection) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </row>
  </div>
</main>