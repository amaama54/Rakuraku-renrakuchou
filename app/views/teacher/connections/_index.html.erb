<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>日付</th>
      <th>タイトル</th>
    </tr>
  </thead>
  <tbody>
    <% @connections.each do |connection| %>
    <tr>
        <td><%= connection.created_at.strftime('%Y/%m/%d') %></td>
        <td><%=link_to connection.title, teacher_connection_path(connection) %></td>
    </tr>
    <% end %>
  </tbody>
</table>