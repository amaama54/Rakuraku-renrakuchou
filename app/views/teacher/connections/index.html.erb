<main>
  <div class="container">
    <div class="row">
      <div class="col mt-5">
        <h2>新規連絡</h2>
        <%= form_with model: @connection, url: "/teacher/connections", local:true do |f| %>
          <h4>タイトル</h4>
          <%= f.text_field :title, size: 30 %>
          <h4 class="mt-3">本文</h4>
          <%= f.text_area :body, size: "29x14" %>
          <div class="row">
            <div class="col text-right">
              <%= f.submit "投稿", class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="col-md-8 offset-md-1 mt-5">
        <h2>連絡事項</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>日付</th>
              <th>タイトル</th>
            </tr>
          </thead>
          <tbody>
            <% @connections.each do |connection| %>
            <tr>
                <td><%= connection.created_at.strftime('%Y/%m/%d') %></td>
                <td><%=link_to connection.title, teacher_connection_path(connection) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-2 offset-5"><%= paginate @connections %></div>
        </div>
      </div>
    </row>
  </div>
</main>