<main>
  <div class="container">
    <div class="row">
      <div class="col mt-5">
        <h2>新規連絡</h2>
        
        <% if @connection.errors.any? %>
          <%= @connection.errors.count %>件のエラーが発生しました
          <% @connection.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        
        <%= form_with model: @connection, url: "/teacher/connections", local:true do |f| %>
          <h4>タイトル</h4>
          <%= f.text_field :title, size: 30 %>
          <h4 class="mt-3">本文</h4>
          <%= f.text_area :body, size: "29x14" %>
          <div class="row">
            <div class="col text-right">
              <%= f.submit "投稿", class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="col-md-8 offset-md-1 mt-5">
        <h2>連絡事項</h2>
        <%= render "teacher/connections/index" %>
        
        <div class="row">
          <div class="col-md-2 offset-5"><%= paginate @connections %></div>
        </div>
        
      </div>
    </row>
  </div>
</main>