<main>
  <div class="container">
    <div class="row mt-5">
      <h2>連絡編集</h2>
    </div>
    
    <div class="row mt-3">
      <div class="col-md-8 offset-4">
        <%= form_with model: @connection, url: "/teacher/connections/#{@connection.id}", local:true do |f| %>
          <h4>タイトル</h4>
          <%= f.text_field :title, size: 60 %>
          <h4 class="mt-3">本文</h4>
          <%= f.text_area :body, size: "60x15" %>
          <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    
  </div>
</main>