<main>
  <div class="container">
    <div class="row">
      <h2>連絡編集</h2>
    </div>
    
    <%= form_with model: @connection, url: "/teacher/connections/#{@connection.id}", local:true do |f| %>
      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>内容</h4>
      <%= f.text_area :body %>
      <%= f.submit "保存" %>
    <% end %>
  </div>
</main>