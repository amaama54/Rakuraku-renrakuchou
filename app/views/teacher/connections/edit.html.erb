<main>
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-2"></div>
      <div class="col-md-8 text-center">
        <h2>連絡編集</h2>
      </div>
      <div class="col-md-2"></div>
    </div>
    
    <div class="row mt-3">
      <div class="col-md-2"></div>
      
      <div class="col-md-8 text-center">
        <%= form_with model: @connection, url: "/teacher/connections/#{@connection.id}", local:true do |f| %>
          <h4>タイトル</h4>
          <%= f.text_field :title, size: 55 %>
          <h4 class="mt-3">本文</h4>
          <%= f.text_area :body, size: "55x15" %>
          <div class="row">
            <div class="col text-right"><%= f.submit "更新", class: "btn btn-success" %></div>
          </div>
        <% end %>
      </div>
      
      <div class="col-md-2"></div>
    </div>
    
  </div>
</main>