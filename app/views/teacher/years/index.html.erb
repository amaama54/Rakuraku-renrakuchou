<main>
  <div class="container">
    <div class="row">
      <div class="col mt-5">
        <h2>新規予定</h2>
        
        <%= render "teacher/connections/error", connection: @year %>
        
        <%= form_with model: @year, url: "/teacher/years", local:true do |f| %>
          <h4>タイトル</h4>
          <%= f.text_field :title %>
          <h4 class="mt-3">日時</h4>
          <%= f.date_select :start_time %>
          <div class="row">
            <div class="col mt-3">
              <%= f.submit "投稿", class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="col-md-8 offset-md-1 mt-5">
        <h2>年間予定</h2>
        <p style="color:blue"><%= flash[:notice] %></p>
        <%= month_calendar events: @years do |date, years| %>
          <%= date.day %>
          
          <% years.each do |year| %>
            <p><%= link_to year.title, edit_teacher_year_path(year) %></p>
          <% end %>
        <% end %>
        </div>
      </div>
    </row>
  </div>
</main>