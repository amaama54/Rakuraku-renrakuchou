<main>
  <div class="container">
    <div class="row mt-3">
      <div class="col-sm"></div>
      <div class="col-sm text-center"><h2>ログイン</h2></div>
      <div class="col-sm"></div>
    </div>
  </div>
    
    <div class="row">
      <div class="col-sm"></div>
      
      <div class="col-sm text-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 25 %>
          </div>
        
          <div class="field mt-3">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", size: 25 %>
          </div>
        
          <div class="actions mt-4">
            <%= f.submit "ログイン" , class: 'sign-btn' %>
          </div>
        <% end %>
        
        <div class="not-sing mt-5">
          <%= render "devise/shared/links" %>
        </div>
      </div>
      
      <div class="col-sm"></div>
    </div>
    
  </div>
</main>