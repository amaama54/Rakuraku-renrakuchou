<main>
  <div class="container">
    <div class="row mt-3">
      <div class="col-md-2 offset-5"><h2>新規登録</h2></div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-2 offset-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, size: 25 %>
        </div>
      
        <div class="field mt-3">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 25 %>
        </div>
      
        <div class="field mt-3">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上の英数字)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", size: 25 %>
        </div>
      
        <div class="field mt-3">
          <%= f.label :確認用パスワード %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25 %>
        </div>
      
        <div class="actions mt-4">
          <%= f.submit "登録" , class: 'sign-btn' %>
        </div>
      <% end %>
      
      <div class="already-singin mt-5">
        <%= render "devise/shared/links" %>
      </div>
      
    </div>
  </div>
</main>