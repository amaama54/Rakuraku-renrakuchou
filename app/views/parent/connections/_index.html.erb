<div class="row mt-3">
  <div class="col-md-2"></div>
  
  <div class="col-md-8">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>日付</th>
          <th>タイトル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% connections.each do |connection| %>
        <tr>
          <td><%= connection.created_at.strftime('%Y/%m/%d') %></td>
          <td><%=link_to connection.title, connection_path(connection) %></td>
          <td style="color:green">
            <% if @current_time < connection.created_at.since(1.day) %>
              new!
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="col-md-2"></div>
</div>